<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" stylesheets="@../CSS/homePageDesign.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.workslink.AllMembers">
   <children>
      <Button fx:id="homeButton" layoutX="62.0" layoutY="43.0" mnemonicParsing="false" onAction="#homeButtonOnAction" prefHeight="31.0" prefWidth="84.0" styleClass="fill-btn" stylesheets="@../CSS/BasicDesign.css" text="Home" />
      <Button layoutX="394.0" layoutY="49.0" mnemonicParsing="false" onAction="#addNewMembers" prefHeight="31.0" prefWidth="151.0" styleClass="fill-btn" stylesheets="@../CSS/BasicDesign.css" text="Add New Members" />
      <TableView fx:id="membersTableView" layoutX="34.0" layoutY="178.0" prefHeight="369.0" prefWidth="528.0" stylesheets="@../CSS/table-view.css">
        <columns>
            <TableColumn fx:id="memberUserName" prefWidth="131.0" text="Name" />
          <TableColumn fx:id="memberEmail" prefWidth="157.0" text="Email" />
            <TableColumn fx:id="memberDOB" prefWidth="142.0" text="Date of Birth" />
            <TableColumn fx:id="memeberEdit" prefWidth="93.0" resizable="false" text=" Edit" />
        </columns>
      </TableView>
      <Label layoutX="244.0" layoutY="107.0" prefHeight="27.0" prefWidth="123.0" style="-fx-alignment: center;" text="My Members" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="membersCountLabel" layoutX="151.0" layoutY="143.0" prefHeight="20.0" prefWidth="258.0" style="-fx-alignment: center;" text="Number Of members ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
      <Label layoutX="209.0" layoutY="559.0" onMouseClicked="#reload" prefHeight="27.0" prefWidth="142.0" stylesheets="@../CSS/BasicDesign.css" text="Reload data">
         <styleClass>
            <String fx:value="normal-label" />
            <String fx:value="icon" />
         </styleClass>
         <graphic>
            <ImageView fitHeight="37.0" fitWidth="27.0" onMouseClicked="#reload" pickOnBounds="true" preserveRatio="true" styleClass="icon">
               <image>
                  <Image url="@../Icon/reload.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
   </children>
</AnchorPane>
